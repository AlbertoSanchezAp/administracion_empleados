@model AdministracionEmpleados.Models.MovimientosModel

@{
    ViewData["Title"] = "RegistraMovimiento";
}

<h4>Registro de Movimientos</h4>
<hr />
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="RegistraMovimiento">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdEmpleado" class="control-label"></label>
                    <input asp-for="IdEmpleado" class="form-control" readonly="readonly">
                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreEmpleado" class="control-label"></label>
                    <input asp-for="NombreEmpleado" class="form-control" readonly="readonly" />
                    <span asp-validation-for="NombreEmpleado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EntregasDiaria" class="control-label"></label>
                    <input asp-for="EntregasDiaria" class="form-control" />
                    <span asp-validation-for="EntregasDiaria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaCaptura" class="control-label"></label>
                    <input asp-for="FechaCaptura" class="form-control" />
                    <span asp-validation-for="FechaCaptura" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Turno" class="control-label"></label>
                    <input asp-for="Turno" class="form-control" />
                    <span asp-validation-for="Turno" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Regresar</a>
    </div>
}
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
